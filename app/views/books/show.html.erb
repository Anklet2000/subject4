<% if @book.errors.any? %>
  error
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>



<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-3">
      <h1>User info</h1>
      <p><%= image_tag @user.get_profile_image(100,100) %></p>
      <p>name: <%= @user.name %></p>
      <p>introduction: <%= @user.introduction %></p>
      <%= link_to edit_user_path(@user) do %>
        <button type="button" class="btn btn-outline-secondary w-75">
          <i class="fas fa-user-cog"></i>
        </button>
      <% end %>

      <%= form_with model: @book do |f| %>
        <div class="row mt-4">
          <div class="col-12">
            <h1>New book</h1>
          </div>
          <div class="col-12">
            <h4>Title</h4>
            <%= f.text_field :title %>
          </div>
          <div class="col-12">
            <h4>Opinion</h4>
            <%= f.text_area :body %>
          </div>
          <div class="col-12 mt-3">
            <%= f.submit "Create Book", class:'btn btn-success' %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1 class="mb-0">Book detail</h1>
      <hr class="mt-0">
      <div class="row">
        <div class="col-2">
          <%= link_to user_path(@book1.user) do %>
            <%= image_tag @book1.user.get_profile_image(100,100) %>
            <%= @book1.user.name %>
          <% end %>
        </div>
        <div class="col-2">
          <%= link_to book_path(@book1) do %>
          <%= @book1.title %>
          <% end %>
        </div>
        <div class="col-2">
          <%= @book1.body %>
        </div>
        <div class="col-2">
          <% if @book1.favorited_by?(current_user) %>
            <%= link_to book_favorites_path(@book1), method: :delete do %>
              <i class="fas fa-heart"></i><%= @book1.favorites.count %>
            <% end %>
          <% else %>
            <%= link_to book_favorites_path(@book1), method: :post do %>
              <i class="far fa-heart"></i><%= @book.favorites.count %>
            <% end %>
          <% end %>
        </div>
        <div class="col-2">
          <p>コメント数：<%= @book1.book_comments.count %></p>
        </div>
        <% if @book1.user == current_user %>
          <div class="col-1">
            <%= link_to edit_book_path(@book1) do %>
              <button type="button" class="btn btn-success">
                Edit
              </button>
            <% end %>
          </div>
          <div class="col-1 ml-5">
            <%= link_to book_path(@book1), method: :delete, data: { confirm: "本当に消しますか？" } do %>
              <button type="button" class="btn btn-danger">
                Destroy
              </button>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class = "mt-5">
        <table class="table">
          <tbody>
            <% @book1.book_comments.each do |book_comment| %>
              <tr>
                <td><%= image_tag book_comment.user.get_profile_image(100,100) %></td>
                <td><%= book_comment.user.name %></td>
                <td><%= book_comment.comment %></td>
                <td>
                  <% if book_comment.user == current_user %>
                    <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class = "mt-3">
        <%= form_with model: [@book1, @book_comment] do |f| %>
        <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %><br>
        <%= f.submit "送信" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>